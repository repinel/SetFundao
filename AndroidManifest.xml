<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="br.repinel"
	android:versionName="2.1" android:versionCode="7">

	<!-- android:debuggable="true" -->
	<application android:icon="@drawable/app_icon" android:label="@string/app_name">

		<activity
			android:name=".setfundao.ui.tab.Tab1Activity"
			android:label="@string/app_name"/>

		<activity
			android:name=".setfundao.ui.tab.Tab2Activity"
			android:label="@string/app_name"/>

		<activity
			android:name=".setfundao.ui.tab.Tab3Activity"
			android:label="@string/app_name"/>

		<activity
			android:name=".setfundao.ui.tab.Tab4Activity"
			android:label="@string/app_name"/>

		<activity
			android:name=".setfundao.ui.prefs.Preferences" />

		<activity
			android:name=".setfundao.ui.MainTabWidget"
			android:label="@string/app_name" android:theme="@style/TabTheme">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>


		<!-- Ads settings -->
		<activity android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"/>
	</application>

	<uses-sdk android:minSdkVersion="7" />

	<uses-permission android:name="android.permission.INTERNET"/>

	<!-- Ads SDK permissions -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
</manifest> 