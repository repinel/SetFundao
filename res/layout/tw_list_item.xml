<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal" >

	<ImageView
		android:id="@+id/tw_image"
		android:layout_height="wrap_content"
		android:layout_width="22px"
		android:layout_marginTop="4px"
		android:layout_marginRight="4px"
		android:layout_marginLeft="4px" >
	</ImageView>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

		<TextView
			android:id="@+id/tw_username"
			android:text="@string/empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_size_small"
			android:textColor="@color/tw_username_foreground" />

		<TextView
			android:id="@+id/tw_text"
			android:text="@string/empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_size_small"
			android:textColor="@color/tw_text_foreground"
			android:autoLink="web"
			android:textColorLink="@color/tw_hyperlink_foreground" />

		<TextView
			android:id="@+id/tw_createdAt"
			android:text="@string/empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_size_xsmall"
			android:textColor="@color/tw_date_foreground" />
	</LinearLayout>
</LinearLayout>
